<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".spaceBodyListActivity">


        <android.support.v7.widget.Toolbar
        android:layout_height="60dp"
        android:layout_width="match_parent"
            android:id="@+id/toolbar">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerList"/>
        </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">
        <fragment
            android:id="@+id/spacebody_list"
            android:name="info.goodline.starsandplanets.fragments.FragmentSpaceBodyList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:layout="@android:layout/list_content"/>
        <fragment
            android:id="@+id/spacebody_expandable_list"
            android:name="info.goodline.starsandplanets.fragments.FragmentSpaceBodyExpandableList"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:layout="@android:layout/expandable_list_content"/>
        <FrameLayout
            android:id="@+id/spacebody_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
    </LinearLayout>


</LinearLayout>
